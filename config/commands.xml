<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<command>
  <description>Creates a new project</description>
  <version>1.5.0</version>
  <option name="quiet">
    <short_name>-q</short_name>
    <long_name>--quiet</long_name>
    <description>hide displayed messages</description>
    <action>StoreTrue</action>
  </option>
  <option name="config">
    <short_name>-c</short_name>
    <long_name>--config</long_name>
    <description>path to config file</description>
    <action>StoreString</action>
  </option>
  <argument name="path">
    <description>the path to install the project to</description>
  </argument>
</command>